<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<!-- Copyright 2013 Mike Battersby -->

<Script file="Frame.lua" />

<Frame name="LiteBagFrameTemplate"
       enableMouse="true"
       frameStrata="MEDIUM" topLevel="true" hidden="true"
       movable="true" resizable="true" clampedToScreen="true"
       inherits="PortraitFrameFlatTemplate" mixin="LiteBagFrameMixin"
       virtual="true">

    <Size x="384" y="512" />

    <ResizeBounds>
        <minResize x="360" y="183" />
    </ResizeBounds>

    <Anchors>
        <Anchor point="TOPLEFT" />
    </Anchors>

    <Frames>
        <Button name="$parentDragButton">
            <Size x="0" y="20"/>
            <Anchors>
                <Anchor point="TOPLEFT"/>
                <Anchor point="TOPRIGHT"/>
            </Anchors>
            <Scripts>
                <OnMouseDown>
                    local parent = self:GetParent()
                    if parent.MovingAllowed then
                        self:GetParent():StartMoving()
                    end
                </OnMouseDown>
                <OnMouseUp>
                    local parent = self:GetParent()
                    parent:StopMovingOrSizing()
                    parent:CheckSnapPosition()
                </OnMouseUp>
            </Scripts>
        </Button>

        <Button name="$parentResizeBottomRight" parentKey="ResizeBottomRight">
            <Size x="16" y="16" />
            <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
            </Anchors>
            <NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up" setAllPoints="true" />
            <Scripts>
                <OnLoad function="RaiseFrameLevel" />
                <OnMouseDown>
                    local parent = self:GetParent()
                    if parent:ResizeAllowed() then
                        parent.sizing = true
                        parent:StartSizing("BOTTOMRIGHT")
                    end
                </OnMouseDown>
                <OnMouseUp>
                    local parent = self:GetParent()
                    parent:StopMovingOrSizing()
                    parent.sizing = false
                    parent:ResizeToPanel()
                </OnMouseUp>
            </Scripts>
        </Button>

        <Button name="$parentTab1" inherits="PanelTabButtonTemplate" id="1" text="BANK" hidden="true">
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="11" y="2" />
            </Anchors>
            <Scripts>
                <OnClick> self:GetParent():ShowPanel(self:GetID()) </OnClick>
            </Scripts>
        </Button>

        <Button name="$parentTab2" inherits="PanelTabButtonTemplate" id="2" text="REAGENT_BANK" hidden="true">
            <Anchors>
                <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT" x="-15" y="0" />
            </Anchors>
            <Scripts>
                <OnClick> self:GetParent():ShowPanel(self:GetID()) </OnClick>
            </Scripts>
        </Button>

    </Frames>

    <Scripts>
        <OnLoad method="OnLoad" />
        <OnHide method="OnHide" />
        <OnShow method="OnShow" />
        <OnSizeChanged method="OnSizeChanged" />
    </Scripts>
</Frame>

</Ui>
