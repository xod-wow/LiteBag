<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<!-- Copyright 2013 Mike Battersby -->

<Frame name="LiteBagBackpack" parent="UIParent" inherits="LiteBagFrameTemplate">
    <KeyValues>
        <KeyValue key="FrameType" value="BACKPACK" type="string" />
        <KeyValue key="MovingAllowed" value="true" type="boolean" />
    </KeyValues>
    <Frames>
        <Frame name="LiteBagBackpackPanel" parentArray="panels" inherits="LiteBagContainerFrameTemplate">
            <Anchors> <Anchor point="TOPLEFT" /> </Anchors>
            <KeyValues>
                <KeyValue key="Title" value="BAG_NAME_BACKPACK" type="global" />
                <KeyValue key="FrameType" value="BACKPACK" type="string" />
            </KeyValues>
        </Frame>
    </Frames>
    <Scripts>
        <OnShow inherit="append">
            if not self:IsUserPlaced() then
                self:SetSnapPosition()
            end
        </OnShow>
    </Scripts>
</Frame>

</Ui>
