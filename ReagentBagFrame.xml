<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<!-- Copyright 2013 Mike Battersby -->

<Frame name="LiteBagReagentBag" parent="UIParent" inherits="LiteBagFrameTemplate">
    <KeyValues>
        <KeyValue key="FrameType" value="REAGENTBAG" type="string" />
    </KeyValues>
    <Frames>
        <Frame name="LiteBagReagentBagPanel" parentArray="panels" inherits="LiteBagContainerPanelTemplate">
            <Anchors> <Anchor point="TOPLEFT" /> </Anchors>
            <KeyValues>
                <KeyValue key="Title" value="Reagent Bag" type="string" />
                <KeyValue key="FrameType" value="REAGENTBAG" type="string" />
            </KeyValues>
        </Frame>
    </Frames>
    <Scripts>
        <OnLoad inherit="append">
            self:SetParent(LiteBagBackpack)
            self:ClearAllPoints()
            self:SetPoint("BOTTOMRIGHT", LiteBagBackpack, "BOTTOMLEFT", -16, 0)
            self.CloseButton:Hide()

            -- This is the only thing I could find to hook in OnUpdate
            hooksecurefunc(LiteBagBackpack, 'ResizeToPanel',
                function ()
                    local shown = C_Container.GetContainerNumSlots(5) > 0
                    self:SetShown(shown)
                end)
        </OnLoad>
    </Scripts>
</Frame>

</Ui>
