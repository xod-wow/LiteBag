<Frame name="LiteBagInventory" parent="UIParent" inherits="LiteBagFrameTemplate">

    <Anchors>
        <Anchor point="RIGHT" relativePoint="RIGHT" x="-16" />
    </Anchors>

    <Scripts>
        <OnLoad>
            self.bagIDs = { 0, 1, 2, 3, 4 }
            LiteBagFrame_OnLoad(self)
            SlashCmdList["LiteBagInventory"] = function () self:Show() end
            SLASH_LiteBagInventory1 = "/lb"
        </OnLoad>
    </Scripts>

</Frame>

<Frame name="LiteBagBank" parent="UIParent" inherits="LiteBagFrameTemplate">

    <Anchors>
        <Anchor point="TOPLEFT" x="16" y="-96" />
    </Anchors>

    <Scripts>
        <OnLoad>
            self.bagIDs = { -1, 5, 6, 7, 8, 9, 10, 11 }
            self.columns = 16
            LiteBagFrame_OnLoad(self)
        </OnLoad>
    </Scripts>

</Frame>

</Ui>
